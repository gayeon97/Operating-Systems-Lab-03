import java.util.*;

public class Task {
	
	private LinkedHashMap<String, ArrayList<Integer>> initActivities;
	private LinkedHashMap<String, ArrayList<Integer>> requestActivities;
	private LinkedHashMap<String, ArrayList<Integer>> releaseActivities;
	private LinkedHashMap<String, ArrayList<Integer>> terminateActivities;
	
	private int index;
	private int taskNum;

	
	Task (int i){
		initActivities = new LinkedHashMap<>();
		requestActivities = new LinkedHashMap<>();
		releaseActivities = new LinkedHashMap<>();
		terminateActivities = new LinkedHashMap<>();
		
		index = i;
		taskNum = i + 1;
		
	}
	
//	Task(LinkedHashMap<String, ArrayList<Integer>> initiate, LinkedHashMap<String, ArrayList<Integer>> request, LinkedHashMap<String, ArrayList<Integer>> release, LinkedHashMap<String, ArrayList<Integer>> terminate) {
//		initActivities = initiate;
//		requestActivities = request;
//		releaseActivities = release;
//		terminateActivities = terminate;
//	}
	
	public int getIndex() {
		return index;
	}
	
	public int getTaskNum() {
		return taskNum;
	}
	
	public LinkedHashMap<String, ArrayList<Integer>> getAllInitActivities() {
		return initActivities;
	}
	
	public void setAllInitActivities(LinkedHashMap<String, ArrayList<Integer>> initActvts) {
		initActivities = initActvts;
	}
	
	
	public LinkedHashMap<String, ArrayList<Integer>> getAllRequestActivities() {
		return requestActivities;
	}
	
	public void setAllRequestActivities(LinkedHashMap<String, ArrayList<Integer>> reqActvts) {
		requestActivities = reqActvts;
	}
	
	public LinkedHashMap<String, ArrayList<Integer>> getAllReleaseActivities() {
		return releaseActivities;
	}
	
	public void setAllReleaseActivities(LinkedHashMap<String, ArrayList<Integer>> relsActvts) {
		releaseActivities = relsActvts;
	}
	
	public LinkedHashMap<String, ArrayList<Integer>> getAllTerminateActivities() {
		return terminateActivities;
	}
	
	public void setAllTerminateActivities(LinkedHashMap<String, ArrayList<Integer>> termActvts) {
		terminateActivities = termActvts;
	}
	
	
	

}
